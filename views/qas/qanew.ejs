<% include ../partials/header.ejs %>

    <div class="container">
        <h1 class="jumbotronheading text-center">Ask a Question</h1>
        <div class="formWidth">
            <form action="/q&a" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="question" placeholder="Start your question with 'What', 'How', 'Why', etc.">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Optional: include an image for context">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="url" placeholder="Optional: include a link, reference, or description" rows="8"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>
            </form>
            <button class="btn btn-outline-info "> <i class="fas fa-arrow-circle-left"></i> <a href="/q&a">All Questions</a> </button>
        </div>
    </div>


