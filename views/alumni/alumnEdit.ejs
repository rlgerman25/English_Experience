<% include ../partials/header.ejs %>
    <div class="container">
        <h1 class="jumbotronheading text-center">Edit <em><%= editAlumn.alumniName %></em></h1>
        <div class="formWidth">
            <form action="/alumni/<%= editAlumn._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="alumn[alumniName]" value="<%= editAlumn.alumniName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="alumn[alumniImage]" value="<%= editAlumn.alumniImage %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="alumn[alumniDescription]" value="<%= editAlumn.alumniDescription %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>
            </form>
            <button class="btn btn-info"> <i class="fas fa-arrow-circle-left"></i> <a href="/alumni">Go Back</a> </button>
        </div>
    </div>

    <% include ../partials/footer.ejs %>