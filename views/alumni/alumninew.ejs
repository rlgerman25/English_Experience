<% include ../partials/header.ejs %>
    <div class="container">
        <h2 class="jumbotronheading text-center">Tell Us About Yourself</h2>
        <div class="formWidth">
            <form action="/alumni" method="POST">
                <div class="form-group">
                    <input class="form-control" name="alumniName" type="text" placeholder="What is your name?">
                </div>
                <div class="form-group">
                    <input class="form-control" name="alumniImage" type="text" placeholder="Optional: would you like to include a picture?">
                </div>
                <div class="form-group">
                    <input class="form-control" name="alumniDescription" type="text" placeholder="Tell us about yourself">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>
            </form>
            <a href="/alumni">Go Back</a>
        </div>
    </div>
