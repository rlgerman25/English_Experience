<% include ../partials/header.ejs %>

<div class="container">
    <h1 class="jumbotronheading text-center"> Edit <em><%= editBook.bookName %></em></h1>
    <div class="formWidth">
        <form action="/books/<%= editBook._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="book[bookName]" value="<%= editBook.bookName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[bookAuthor]" value="<%= editBook.bookAuthor %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[bookImage]" value="<%= editBook.bookImage %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[bookFavoritePart]"
                    value="<%= editBook.bookFavoritePart %>">
            </div>
            <div class="form-group ">
                <input class="form-control" type="number" name="book[cost]" value="<%= editBook.cost %>" step="0.010"
                    min="0" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[sellDescription]"
                    placeholder="Specify: 'Book,' 'Bundle,' 'Free,' or 'Trade Book'. E.g. $3 /Book " required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"> Submit </button>
            </div>
        </form>
        <a href="/books/<%= editBook._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer.ejs %>