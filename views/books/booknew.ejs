<% include ../partials/header.ejs %>

    <div class="container">
        <h1 class="jumbotronheading text-center">Fuera lo viejo, venga lo nuevo</h1>
        <div class="formWidth">
            <form action="/books" method="POST">
                <div class="form-group">
                    <input class="form-control" name="bookName" type="text" placeholder="Book name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" name="bookAuthor" type="text" placeholder="Book author">
                </div>
                <div class="form-group">
                    <input class="form-control" name="bookImage" type="text" placeholder="Optional: book cover">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="bookFavoritePart" type="text" placeholder="Would you like to share a memory or your favorite part about this book?" rows="6"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="cost" placeholder="Book cost" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[sellDescription]" placeholder="Specify: 'Book,' 'Bundle,' 'Free,' or 'Trade Book'. E.g. $3 /Book " required>
                </div>


                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit! </button>
                </div>
            </form>
            <button class="btn btn-outline-info "> <i class="fas fa-arrow-circle-left"></i> <a href="/books"> All Books</a> </button>
        </div>
    </div>

    <% include ../partials/footer.ejs %>