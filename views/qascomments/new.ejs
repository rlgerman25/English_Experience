<% include ../partials/header.ejs %>

    <div class="container">
        <h1 class="jumbotronheading text-center">Reply to </h1>
        <h2 class="jumbotronheading text-center"><i> "<%= question.question %>" </i></h2>
        <div class="formWidth">
            <form action="/q&a/<%= question._id %>/comment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Reply">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block"> Submit </button>
                </div>
            </form>
            <a href="/q&a/<%=question._id%>">Go Back</a>
        </div>
    </div>

    <% include ../partials/footer.ejs %>